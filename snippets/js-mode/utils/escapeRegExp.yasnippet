/**
 * Escape special regex characters within a string.
 *
 * @example escapeRegExp("file.js") == "file\\\\.js"
 * @param {String} input
 * @return {String}
 */
function escapeRegExp(input){
	return input.replace(/([/\\\\^\$*+?{}[\\]().|])/g, "\\\\\$1");
}