# Return the current date formatted as "August 9, 2019".
sub currentDate(){
	my ($day, $month, $year) = (localtime())[3..5];
	$year += 1900;
	$month = POSIX::strftime("%B", 0, 0, 0, $day, $month, $year);
	return "$month $day, $year";
}